<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newJobDescription"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="What task would you like completed?"
            android:textColor="@android:color/white"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/et_taskname"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Task Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_taskdetails"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:maxLines="4"
            android:hint="Task Details"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Price"
            android:inputType="numberDecimal" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/bt_broadcastJob"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#21c429"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Broadcast Job"
            android:textColor="@android:color/white" />


        <Button
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:id="@+id/bt_clear"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:background="#36db3f"
            android:text="Clear"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>